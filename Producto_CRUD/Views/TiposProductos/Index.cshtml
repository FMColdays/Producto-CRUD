@model IEnumerable<Producto_CRUD.Models.TiposProducto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="color-primario">Tipo de productos</h1>

<table class ="tabla">
    <thead>
        <tr>
            <th>
              Nombre del tipo de producto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreTipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTipo" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdTipo" class="btn btn-success">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTipo" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
