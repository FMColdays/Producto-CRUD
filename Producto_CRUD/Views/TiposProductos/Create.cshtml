@model Producto_CRUD.Models.TiposProducto

@{
    ViewData["Title"] = "Create";
}

<h1 class="color-primario">Crear</h1>

<h4>Tipos de producto</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="contendor-form">
                <div class="contenedor-input">
                    <div class="form-group">
                        <label asp-for="NombreTipo" class="control-label">Nombre del tipo de producto</label>
                        <input asp-for="NombreTipo" class="form-control" />
                        <span asp-validation-for="NombreTipo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <input type="submit" value="Crear tipo de producto" class="boton-submit" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
