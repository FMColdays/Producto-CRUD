@model Producto_CRUD.Models.Producto

@{
    ViewData["Title"] = "Create";
}

<h1 class="color-primario">Crear</h1>
<h4>Producto</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="contendor-form"> 
                <div class="contenedor-input">
                    <div class="form-group">
                        <label asp-for="NombreProducto" class="control-label"></label>
                        <input asp-for="NombreProducto" class="form-control" />
                        <span asp-validation-for="NombreProducto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescripcionProducto" class="control-label"></label>
                        <input asp-for="DescripcionProducto" class="form-control" />
                        <span asp-validation-for="DescripcionProducto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Precio" class="control-label"></label>
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>
                <div class="contenedor-input">
                    <div class="form-group">
                        <label asp-for="Stock" class="control-label"></label>
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdTipoProducto" class="control-label"></label>
                        <select asp-for="IdTipoProducto" class ="form-control" asp-items="ViewBag.IdTipoProducto"></select>
                    </div>
                </div>
            </div>
        
                <input type="submit" value="Crear producto" class="boton-submit" />
     
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
